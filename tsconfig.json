{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2017",
    "outDir": "lib",
    "rootDir": "src",
  },
  "include": ["src/*"]
}
